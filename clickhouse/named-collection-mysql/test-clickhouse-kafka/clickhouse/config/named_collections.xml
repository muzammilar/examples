<?xml version="1.0"?>
<clickhouse>
    <named_collections>
        <!-- Kafka connection configuration for consuming/producing messages -->
        <kafka_config>
            <brokers from_env="KAFKA_BROKERS"/>
        </kafka_config>

        <!-- MySQL connection configuration for reading/writing data -->
        <mysql_config>
            <host from_env="MYSQL_HOST"/>
            <port from_env="MYSQL_PORT"/>
            <user from_env="MYSQL_USER"/>
            <password from_env="MYSQL_PASSWORD"/>
            <database from_env="MYSQL_DATABASE"/>
        </mysql_config>
    </named_collections>
</clickhouse>
