                <!-- We use internal_replication since we have have a keeper. -->
                <internal_replication>true</internal_replication>
                <replica>
                    <host>clickhouse-server-08</host>
                    <port>9000</port>
                </replica>
            </shard>
            <!-- Shard 9 -->
            <shard>
                <!-- We use internal_replication since we have have a keeper. -->
                <internal_replication>true</internal_replication>
                <replica>
                    <host>clickhouse-server-09</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster_hits>
    </remote_servers>
</clickhouse>
