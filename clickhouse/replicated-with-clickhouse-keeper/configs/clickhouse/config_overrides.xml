<clickhouse>

    <!-- Remove MySQL port -->
    <mysql_port remove="remove" />

    <!-- Remove PostgreSQL port -->
    <postgresql_port remove="remove" />

    <!-- Disables lagging replicas for distributed queries. Sets the time in seconds. If a replica lags more than the set value, this replica is not used.-->
    <max_replica_delay_for_distributed_queries>15</max_replica_delay_for_distributed_queries>

    <!--Default <default_replica_path>/clickhouse/tables/{uuid}/{shard}</default_replica_path> -->
    <default_replica_path replace="replace">/clickhouse/tables/{database}.{table}/{shard}</default_replica_path>

    <!--Add prometheus based monitoring -->
    <prometheus>
        <endpoint>/metrics</endpoint>
        <port>8001</port>
        <metrics>true</metrics>
        <events>true</events>
        <asynchronous_metrics>true</asynchronous_metrics>
    </prometheus>

</clickhouse>
